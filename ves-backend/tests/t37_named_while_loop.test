mut a = 10

@first: while a > 0 { 
    mut b = a - 1

    @second: while b > 0 {
        mut c = b - 1
        b = c
        continue @first
        break @second
    }

    @third: while b > 0 {
        mut d = b - 1
        b = d
        break @first
        continue @third
    }

    a = b
}

